{
	"private": true,
	"name": "cra-templates-stocky37",
	"version": "0.1.0",
	"workspaces": [
		"packages/*",
		"packages/template-*/dist"
	],
	"scripts": {
		"build": "yarn workspaces foreach -v --include 'template-*' run build:template && yarn",
		"format": "prettier-package-json --use-tabs --write **/package.json && prettier --write .",
		"format:check": "prettier-package-json --use-tabs -l && prettier --check . ",
		"publish": "yarn workspaces foreach -v --include 'cra-template-*' npm publish"
	},
	"devDependencies": {
		"husky": "^4.2.5",
		"lint-staged": "^10.2.11",
		"prettier": "^2.0.5",
		"prettier-package-json": "^2.1.3",
		"pretty-quick": "^2.0.1"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged && pretty-quick --staged"
		}
	},
	"lint-staged": {
		"package.json": "prettier-package-json --write"
	}
}
