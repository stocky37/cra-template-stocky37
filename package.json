{
	"private": true,
	"name": "cra-templates-stocky37",
	"description": "Base CRA template for GitHub user stocky37.",
	"license": "MIT",
	"version": "0.1.0",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"preformat": "prettier-package-json --write **/package.json",
		"format": "prettier --write .",
		"preformat:check": "prettier-package-json -l",
		"format:check": "prettier --check .",
		"publish": "yarn npm publish"
	},
	"devDependencies": {
		"husky": "^4.2.5",
		"lint-staged": "^10.2.11",
		"prettier": "^2.0.5",
		"prettier-package-json": "^2.1.3",
		"pretty-quick": "^2.0.1"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged && pretty-quick --staged"
		}
	},
	"lint-staged": {
		"package.json": "prettier-package-json --write"
	}
}
